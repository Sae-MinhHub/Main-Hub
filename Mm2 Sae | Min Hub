    Title = "Discord",
    Icon = "skull", -- icon tùy chọn
    Color = Color3.fromRGB(0, 132, 255),
    Callback = function()
        local textToCopy = "disccord" -- thay bằng text bạn muốn
        setclipboard(textToCopy)
